@model  WebApplication3.Models.Category

@{
    ViewBag.Title = "Index";
}
<h2>Category Manager</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Id</label>
        @Html.TextBoxFor(m => m.Id, new { @class="form-control"})
    </div>

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Name VN</label>
        @Html.TextBoxFor(m => m.NameVN, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <button class="btn btn-default" formaction="@Url.Action("Insert")">Insert</button>
        <button class="btn btn-default" formaction="@Url.Action("Delete")">Delete</button>
        <button class="btn btn-default" formaction="@Url.Action("Update")">Update</button>
    </div>
   
}

@if (Model != null)
{
    <fieldset>
        <legend>Cac san pham</legend>
        <ul>
            @foreach (var p in Model.Products)
            {
                <li>@p.Name</li>
            }
        </ul>
    </fieldset>
}


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Name VN</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in ViewBag.ItemList)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.NameVN</td>
                <td>
                    <a href="@Url.Action("Edit", new { Id = c.Id })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
