@model  WebApplication3.Models.Customer
@{
    ViewBag.Title = "Index";
}

<h2>Customer</h2>

@* Dung de upload can co formethod la POST va enctype="multipart/form-control" *@
@using (Html.BeginForm("Index", "Customer", FormMethod.Post, new { enctype="multipart/form-data"}))
{
    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(m => m.Id, new { @class="form-control"})
    </div>
    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Photo</label>
        <input type="file" name="upPhoto" />
        @Html.HiddenFor(m => m.Photo)
    </div>
    <div class="form-group">
        <label>Activated?</label>
        @Html.RadioButtonFor(m => m.Activated, true) Yes
        @Html.RadioButtonFor(m => m.Activated, false) No
    </div>
    <div class="form-group">
        <button formaction="@Url.Action("Insert")" class="btn btn-default">Insert</button>
        <button formaction="@Url.Action("Delete")" class="btn btn-default">Delete</button>
        <button formaction="@Url.Action("Update")" class="btn btn-default">Update</button>
        <button formaction="@Url.Action("Reset")" class="btn btn-default">Reset</button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>FullName</th>
            <th>Photo</th>
            <th>Email</th>
            <th>Activated</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Item)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Fullname
                </td>
                <td>
                    @item.Photo
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @(item.Activated?"Yes":"No")
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { Id = item.Id })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
