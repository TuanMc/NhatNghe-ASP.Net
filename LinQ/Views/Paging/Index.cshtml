
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<ul class="pager">
    <li><a href="@Url.Action("Index", new {PageNo = 0 })"> |< </a></li>
    <li><a href="@Url.Action("Index", new { PageNo = ViewBag.PageNo - 1 <= 0 ? 0 : ViewBag.PageNo-1 })"> << </a></li>
    <li><a href="@Url.Action("Index", new {PageNo = ViewBag.PageNo + 1 >= ViewBag.PageMax ? ViewBag.PageMax : ViewBag.PageNo + 1})"> >> </a></li>
    <li><a href="@Url.Action("Index", new {PageNo = ViewBag.PageMax})"> >| </a></li>
</ul>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>UnitPrice</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var i in ViewBag.Items)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>@i.UnitPrice</td>
                <td>@i.Category.NameVN</td>
            </tr>
        }
    </tbody>
</table>
